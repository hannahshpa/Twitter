<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TimelineActivity">

    <android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/swipeContainer"
        android:layout_width="match_parent"
        android:layout_height="325dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/button">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvTweet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp" />

    </android.support.v4.widget.SwipeRefreshLayout>

    <ImageButton
        android:id="@+id/button"
        android:layout_width="42dp"
        android:layout_height="49dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="122dp"
        android:background="@android:color/transparent"
        android:backgroundTint="@color/tab_selector"
        android:text="Button"
        app:srcCompat="@drawable/notifications_button" />

    <ImageButton
        android:id="@+id/ivHomeButton"
        android:layout_width="42dp"
        android:layout_height="49dp"
        android:backgroundTint="@color/tab_selector"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/home_button" />

    <ImageButton
        android:id="@+id/ivSearchButton"
        android:layout_width="42dp"
        android:layout_height="49dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="127dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:backgroundTint="@color/tab_selector"
        app:srcCompat="@drawable/search_button" />

    <ImageButton
        android:id="@+id/ivMessagesButton"
        android:layout_width="42dp"
        android:layout_height="49dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="27dp"
        android:backgroundTint="@color/tab_selector"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/messages_button" />


</RelativeLayout>